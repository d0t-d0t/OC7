[Unit]
Description=Streamlit App
After=network.target

[Service]
User=ubuntu
WorkingDirectory=/home/ubuntu/OC7
Environment=PATH=/home/ubuntu/OC7/venv/bin
ExecStart=/home/ubuntu/OC7/venv/bin/streamlit run app.py --server.port=8501 --server.address=0.0.0.0
Restart=always

[Install]
WantedBy=multi-user.target
